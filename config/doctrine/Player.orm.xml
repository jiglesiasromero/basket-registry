<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                   https://raw.github.com/doctrine/doctrine2/master/doctrine-mapping.xsd">
    <entity name="App\Domain\Entity\Player" table="player">
        <id name="id" type="integer" column="id" />
        <field name="name" type="string" length="100" column="name" unique="true"/>
        <field name="role" type="string" length="20" column="role"/>
        <field name="rate" column="rate" type="integer" nullable="true"/>
    </entity>
</doctrine-mapping>